---

<Layout seo={routesSEO.about}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gray-900 text-white overflow-hidden">
    <div class="absolute inset-0 z-0">
      <Image
        src="/images/about/hero-bg.webp"
        alt="NCR Trucking team and fleet"
        width={1920}
        height={1080}
        class="w-full h-full object-cover opacity-20"
      />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in">
          Our Story & Mission
        </h1>
        <p
          class="text-xl text-gray-300 mb-8 animate-fade-up animation-delay-200">
          Since 2019, NCR Trucking has been setting new standards in specialized
          transportation, combining expertise, reliability, and innovation to
          serve our clients better.
        </p>
        <div
          class="flex justify-center space-x-4 animate-fade-up animation-delay-400">
          <a href="#team" class="btn-primary"> Meet Our Team </a>
          <a href="#values" class="btn-secondary"> Our Values </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Values -->
  <section id="values" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-6">Our Core Values</h2>
        <p class="text-lg text-gray-600">
          These principles guide every decision we make and shape how we serve
          our clients.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          companyValues.map((value, index) => (
            <div
              class="bg-gray-50 rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 animate-fade-up"
              style={`animation-delay: ${index * 150}ms`}>
              <div class="inline-flex items-center justify-center w-12 h-12 bg-accent/10 rounded-full mb-4">
                <svg
                  class="w-6 h-6 text-accent"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  set:html={value.icon}
                />
              </div>
              <h3 class="text-xl font-semibold mb-3">{value.title}</h3>
              <p class="text-gray-600">{value.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Leadership Team -->
  <section id="team" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-6">Leadership Team</h2>
        <p class="text-lg text-gray-600">
          Meet the experienced professionals who lead NCR Trucking towards
          excellence.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          teamMembers.map((member, index) => (
            <div
              class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group animate-fade-up"
              style={`animation-delay: ${index * 200}ms`}>
              <div class="relative h-80 overflow-hidden">
                <Image
                  src={member.image}
                  alt={member.name}
                  width={400}
                  height={500}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="p-6">
                <h3 class="text-2xl font-semibold mb-2">{member.name}</h3>
                <p class="text-accent font-medium mb-4">{member.position}</p>
                <p class="text-gray-600 mb-4">{member.bio}</p>
                <div class="border-t pt-4">
                  <p class="text-sm text-gray-600 mb-2">
                    <span class="font-semibold">Experience:</span>{" "}
                    {member.experience}
                  </p>
                  <div class="mb-4">
                    <p class="text-sm font-semibold mb-2">Expertise:</p>
                    <div class="flex flex-wrap gap-2">
                      {member.expertise.map((skill) => (
                        <span class="bg-gray-100 text-gray-700 text-sm px-3 py-1 rounded-full">
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>
                  <div class="text-sm text-gray-600">
                    <p>
                      <span class="font-semibold">Email:</span>{" "}
                      <a
                        href={`mailto:${member.contact.email}`}
                        class="text-accent hover:underline">
                        {member.contact.email}
                      </a>
                    </p>
                    <p>
                      <span class="font-semibold">Phone:</span>{" "}
                      <a
                        href={`tel:${member.contact.phone}`}
                        class="text-accent hover:underline">
                        {member.contact.phone}
                      </a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-8 md:py-20 bg-white" id="our-journey">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-8 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 md:mb-6">Our Journey</h2>
        <p class="text-base md:text-lg text-gray-600">
          From our humble beginnings to our current success, every step has
          shaped who we are today.
        </p>
      </div>

      <div class="relative">
        {/* Línea central vertical - se oculta en móvil */}
        <div
          class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-accent/20">
        </div>

        <div class="space-y-8 md:space-y-16">
          {
            timeline.map((event, index) => (
              <div
                class={`relative flex flex-col md:flex-row items-center ${
                  index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"
                } animate-fade-up`}
                style={`animation-delay: ${index * 200}ms`}>
                {/* Punto en la línea temporal */}
                <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-accent rounded-full" />

                {/* Línea vertical para móvil */}
                <div class="absolute md:hidden left-4 top-0 h-full w-0.5 bg-accent/20" />
                <div class="absolute md:hidden left-2.5 top-0 w-3 h-3 bg-accent rounded-full" />

                {/* Contenido */}
                <div
                  class={`w-full md:w-1/2 pl-12 md:pl-0 ${
                    index % 2 === 0 ? "md:pr-24" : "md:pl-24"
                  }`}>
                  <div class="bg-gray-50 rounded-lg p-4 md:p-6 shadow-lg hover:shadow-xl transition-all duration-300">
                    {event.image && (
                      <div class="relative h-40 md:h-48 mb-4 overflow-hidden rounded-lg">
                        <Image
                          src={event.image}
                          alt={event.title}
                          width={600}
                          height={400}
                          class="w-full h-full object-cover"
                        />
                      </div>
                    )}
                    <div class="text-accent font-bold text-lg md:text-xl mb-2">
                      {event.year}
                    </div>
                    <h3 class="text-lg md:text-xl font-semibold mb-2 md:mb-3">
                      {event.title}
                    </h3>
                    <p class="text-sm md:text-base text-gray-600">
                      {event.description}
                    </p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Certifications & Awards -->
