---
import Layout from "../layouts/Layout.astro";
import { routesSEO } from "../data/seo";
import { Image } from "astro:assets";

// Interfaces
interface Service {
  id: string;
  title: string;
  description: string;
  features: string[];
  image: string;
  icon: string;
  specifications: {
    capacity: string;
    dimensions: string;
    equipment: string[];
  };
}

interface EquipmentType {
  name: string;
  description: string;
  specs: {
    label: string;
    value: string;
  }[];
  features: string[];
  image: string;
  safetyChecks: string[];
}

interface ProcessStep {
  step: number;
  title: string;
  description: string;
  icon: string;
  image: string;
}

interface SafetyFeature {
  title: string;
  description: string;
  icon: string;
  stats?: {
    value: string;
    label: string;
  };
}

interface CargoType {
  name: string;
  description: string;
  handling: string[];
  image: string;
  requirements: string[];
}

interface ProjectCase {
  title: string;
  client: string;
  description: string;
  challenges: string[];
  solutions: string[];
  results: string[];
  images: string[];
  date: string;
}

interface ServiceStat {
  value: string;
  label: string;
  description: string;
  trend: number;
}

