---

<Layout seo={routesSEO.home}>
  <!-- Hero Section con Video -->
  <section id="hero" class="relative h-screen overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0 w-full h-full">
      <video
        autoplay
        loop
        muted
        playsinline
        class="object-cover w-full h-full"
        poster="/images/hero-poster.webp">
        <source src="/videos/hero.mp4" type="video/mp4" />
      </video>
      <div class="absolute inset-0 bg-gradient-to-r from-black/40 to-black/40">
      </div>
    </div>

    <!-- Main Content -->
    <div class="relative h-full container mx-auto px-4">
      <div
        class="flex flex-col md:flex-row items-center justify-between h-full py-16 md:py-0">
        <!-- Left Content -->
        <div
          class="flex flex-col justify-center md:w-1/2 space-y-6 md:space-y-8">
          <h1
            class="text-5xl md:text-7xl font-bold text-white animate-fade-in">
            Professional <span class="text-accent">Transportation</span> Services
          </h1>

          <!-- Stats Grid -->
          <div class="grid grid-cols-2 gap-4 w-full max-w-xl animate-fade-up">
            {
              heroStats.map((stat, index) => (
                <div
                  class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-white transform hover:scale-105 transition-transform duration-300"
                  style={`animation-delay: ${(index + 2) * 200}ms`}>
                  <div class="text-3xl font-bold text-accent mb-2">
                    {stat.value}
                  </div>
                  <div class="text-sm md:text-base">{stat.label}</div>
                </div>
              ))
            }
          </div>

          <!-- CTA Buttons -->
          <div
            class="flex flex-col sm:flex-row gap-4 pt-4 animate-fade-up animation-delay-800">
            <a
              href="/contact"
              class="bg-accent hover:bg-accent/90 text-white px-8 py-4 rounded-lg text-lg font-semibold text-center transition-all duration-300 hover:shadow-lg">
              Get a Quote
            </a>

            <a
              href="/what-we-do"
              class="bg-white/10 hover:bg-white/20 text-white px-8 py-4 rounded-lg text-lg font-semibold text-center backdrop-blur-sm transition-all duration-300 hover:shadow-lg">
              Our Services
            </a>
          </div>
        </div>

        <!-- Right Content (Image) -->
        <div class="hidden md:block w-1/2 pl-8">
          <img
            src="/Logo-White.webp"
            alt="NCR Trucking Inc Logo"
            class="animate-fade-in p-11"
          />

          <p
            class="text-xl bg-black/10 backdrop-blur-sm rounded-lg p-6 text-white transform hover:scale-105 transition-transform duration-300">
            We are NCR Trucking Inc, we have been in the market since 2019 We
            provide our customers need with the best transportation service
          </p>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div
      class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg
        class="w-8 h-8 text-white/80 hover:text-white transition-colors duration-300"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Achievement Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          achievements.map((achievement, index) => (
            <div
              class="text-center p-6 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors duration-300 animate-fade-up"
              style={`animation-delay: ${index * 150}ms`}>
              <div class="text-4xl font-bold text-accent mb-2">
                {achievement.value}
                <span class="text-3xl">{achievement.suffix}</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">{achievement.title}</h3>
              <p class="text-gray-600">{achievement.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Services Section with Images -->
  <section id="services" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-6">Our Services</h2>
        <p class="text-lg text-gray-600">
          Comprehensive transportation solutions tailored to meet your specific
          needs. We specialize in steel transport and offer a range of
          professional services.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          services.map((service, index) => (
            <div
              class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 animate-fade-up group"
              style={`animation-delay: ${index * 200}ms`}>
              <div class="flex items-center mb-4">
                <svg
                  class="h-8 w-8 text-accent"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  set:html={service.icon}
                />
                <h3 class="text-xl font-semibold ml-3">{service.title}</h3>
              </div>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <a
                href={service.link}
                class="text-accent hover:text-accent/80 font-medium inline-flex items-center transition-colors duration-300 group-hover:translate-x-2">
                Learn More
                <svg
                  class="w-5 h-5 ml-1"
                  viewBox="0 0 20 20"
                  fill="currentColor">
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Equipment Showcase -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-6">Our Equipment</h2>
        <p class="text-lg text-gray-600">
          Modern fleet and specialized equipment ready to handle your
          transportation needs with maximum efficiency and safety.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          equipment.map((item, index) => (
            <div
              class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 animate-fade-up"
              style={`animation-delay: ${index * 200}ms`}>
              <div class="relative h-64 overflow-hidden">
                <Image
                  src={item.image}
                  alt={item.name}
                  width={600}
                  height={400}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold mb-3">{item.name}</h3>
                <p class="text-gray-600 mb-4">{item.description}</p>
                <ul class="space-y-2">
                  {item.specs.map((spec) => (
                    <li class="flex items-center text-gray-600">
                      <svg
                        class="w-5 h-5 text-accent mr-2"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      {spec}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Safety Metrics -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-6">Safety First</h2>
        <p class="text-lg text-gray-600">
          Our commitment to safety is reflected in every aspect of our
          operations, from driver training to equipment maintenance.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          safetyMetrics.map((metric, index) => (
            <div
              class="bg-white rounded-lg p-6 shadow-lg text-center animate-fade-up"
              style={`animation-delay: ${index * 150}ms`}>
              <div class="inline-flex items-center justify-center w-12 h-12 bg-accent/10 rounded-full mb-4">
                <svg
                  class="w-6 h-6 text-accent"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  set:html={metric.icon}
                />
              </div>
              <div class="text-3xl font-bold text-accent mb-2">
                {metric.value}
              </div>
              <h3 class="text-lg font-semibold mb-2">{metric.metric}</h3>
              <p class="text-gray-600">{metric.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-6">Client Testimonials</h2>
        <p class="text-lg text-gray-600">
          Don't just take our word for it. Here's what our clients say about
          working with NCR Trucking.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          testimonials.map((testimonial, index) => (
            <div
              class="bg-gray-50 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 animate-fade-up"
              style={`animation-delay: ${index * 200}ms`}>
              <div class="flex items-center mb-4">
                <img
                  src={testimonial.image}
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full object-cover"
                  width={48}
                  height={48}
                />
                <div class="ml-4">
                  <h3 class="font-semibold">{testimonial.name}</h3>
                  <p class="text-sm text-gray-600">{testimonial.position}</p>
                  <p class="text-sm text-accent">{testimonial.company}</p>
                </div>
              </div>
              <p class="text-gray-600 italic">{testimonial.content}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section id="cta" class="py-20 bg-primary text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 animate-fade-up">
        Ready to Get Started?
      </h2>
      <p
        class="text-xl mb-12 max-w-2xl mx-auto animate-fade-up animation-delay-200">
        Contact us today to discuss your transportation needs and discover how
        we can help your business grow.
      </p>
      <div
        class="flex flex-col sm:flex-row justify-center gap-4 animate-fade-up animation-delay-400">
        <a
          href="/contact"
          class="inline-block bg-accent hover:bg-accent/90 text-white px-8 py-3 rounded-md transition-colors duration-300">
          Contact Us
        </a>
        <a
          href="/what-we-do"
          class="inline-block bg-white text-primary hover:bg-gray-100 px-8 py-3 rounded-md transition-colors duration-300">
          Learn More
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
  }

  .animate-fade-up {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.6s ease-out forwards;
  }

  .animation-delay-200 {
    animation-delay: 200ms;
  }

  .animation-delay-400 {
    animation-delay: 400ms;
  }

  .animation-delay-800 {
    animation-delay: 800ms;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
