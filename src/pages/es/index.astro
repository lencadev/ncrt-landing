---
import Layout from "../../layouts/Layout.astro";
import { routesSEO } from "../../data/seo";
import { Image } from "astro:assets";

// Interfaces
interface HeroStats {
  value: string;
  label: string;
}

interface Service {
  title: string;
  description: string;
  icon: string;
  link: string;
}

interface Testimonial {
  name: string;
  position: string;
  company: string;
  content: string;
  image: string;
}

interface Achievement {
  title: string;
  value: string;
  suffix: string;
  description: string;
}

interface Feature {
  title: string;
  description: string;
  image: string;
}

interface Equipment {
  name: string;
  description: string;
  specs: string[];
  image: string;
}

interface SafetyMetric {
  metric: string;
  value: string;
  description: string;
  icon: string;
