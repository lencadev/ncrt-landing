---
const territories = [
  {
    region: "Midwest",
    states: ["Illinois", "Indiana", "Michigan", "Ohio", "Wisconsin", "Minnesota"]
  },
  {
    region: "Northeast",
    states: ["New York", "Pennsylvania", "New Jersey", "Massachusetts"]
  },
  {
    region: "South",
    states: ["Texas", "Tennessee", "Kentucky", "Georgia", "Florida"]
  }
];
---

<section id="territory" class="section-padding bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Territory We Cover</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Providing reliable transportation services across multiple regions
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {territories.map((territory) => (
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <h3 class="text-xl font-semibold mb-4 text-accent">{territory.region}</h3>
          <ul class="space-y-2">
            {territory.states.map((state) => (
              <li class="flex items-center">
                <svg 
                  class="h-5 w-5 text-accent mr-2" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                  />
                </svg>
                {state}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>