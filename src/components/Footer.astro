---

<footer class="bg-gray-900 text-white">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:py-16 lg:px-8">
    <div class="xl:grid xl:grid-cols-5 xl:gap-8">
      <!-- Logo y descripción -->
      <div class="space-y-8 xl:col-span-2">
        <img
          src="/Logo-White.webp"
          alt="NCR Trucking Logo"
          class="h-10"
          width="140"
          height="40"
        />
        <p class="text-base text-gray-400 max-w-sm">
          Professional transportation services since 2019. Specializing in steel
          transport and heavy haul with a commitment to safety and reliability.
        </p>
        <div class="flex space-x-6">
          {
            socialLinks.map((item) => (
              <a
                href={item.href}
                class="text-gray-400 hover:text-accent transition-colors"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Follow us on ${item.name}`}>
                <span class="sr-only">Follow us on {item.name}</span>
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  set:html={item.icon}
                />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Links de navegación -->
      <div class="mt-12 grid grid-cols-2 gap-8 xl:col-span-3 xl:mt-0">
        <div class="grid grid-cols-2 gap-8 md:grid-cols-3">
          {
            footerLinks.map((section) => (
              <div>
                <h3 class="text-sm font-semibold uppercase tracking-wider text-white">
                  {section.title}
                </h3>
                <ul role="list" class="mt-4 space-y-4">
                  {section.links.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-base text-gray-400 hover:text-accent transition-colors">
                        {link.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Información de contacto -->
    <div class="mt-12 border-t border-gray-800 pt-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="flex items-start space-x-3">
          <svg
            class="h-6 w-6 text-accent flex-shrink-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h4 class="text-sm font-semibold text-white">Business Hours</h4>
            <p class="mt-1 text-sm text-gray-400">Mon-Fri: 7AM-6PM</p>
          </div>
        </div>

        <div class="flex items-start space-x-3">
          <svg
            class="h-6 w-6 text-accent flex-shrink-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          <div>
            <h4 class="text-sm font-semibold text-white">Phone Numbers</h4>
            <p class="mt-1 text-sm text-gray-400">Office: 773-819-7400</p>
            <p class="text-sm text-gray-400">Cell: 773-703-1227</p>
          </div>
        </div>

        <div class="flex items-start space-x-3">
          <svg
            class="h-6 w-6 text-accent flex-shrink-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <div>
            <h4 class="text-sm font-semibold text-white">Email</h4>
            <a
              href="mailto:info@ncrtrucking.com"
              class="mt-1 text-sm text-gray-400 hover:text-accent transition-colors">
              info@ncrtrucking.com
            </a>
          </div>
        </div>

        <div class="flex items-start space-x-3">
          <svg
            class="h-6 w-6 text-accent flex-shrink-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <div>
            <h4 class="text-sm font-semibold text-white">Location</h4>
            <p class="mt-1 text-sm text-gray-400">Chicago, IL</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 border-t border-gray-800 pt-8">
      <p class="text-base text-gray-400 text-center">
        &copy; {currentYear} NCR Trucking Inc. All rights reserved.
      </p>
    </div>
  </div>
</footer>
