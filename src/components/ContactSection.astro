---
const contactInfo = {
  office: {
    hours: "Monday-Friday",
    time: "7AM-6PM"
  },
  phones: [
    { type: "Office", number: "773-819-7400" },
    { type: "Cell", number: "773-703-1227" },
    { type: "Safety", number: "773-827-3272" }
  ]
};
---

<section class="section-padding bg-gray-50" id="contact">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Información de Contacto -->
      <div class="space-y-8">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Contact Us</h2>
          <p class="text-lg text-gray-600">
            Get in touch with us for any inquiries about our services
          </p>
        </div>

        <!-- Horario de Oficina -->
        <div class="bg-white rounded-lg p-6 shadow-lg">
          <h3 class="text-xl font-semibold mb-4 flex items-center">
            <svg 
              class="h-6 w-6 text-accent mr-2" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
            Office Hours
          </h3>
          <p class="text-gray-600 mb-2">{contactInfo.office.hours}</p>
          <p class="text-gray-600">{contactInfo.office.time}</p>
        </div>

        <!-- Números de Contacto -->
        <div class="bg-white rounded-lg p-6 shadow-lg">
          <h3 class="text-xl font-semibold mb-4">Contact Numbers</h3>
          <div class="space-y-4">
            {contactInfo.phones.map((phone) => (
              <div class="flex items-center justify-between">
                <span class="text-gray-600">{phone.type}</span>
                <a 
                  href={`tel:${phone.number}`} 
                  class="text-accent hover:text-accent/80 transition-colors duration-300 font-semibold"
                >
                  {phone.number}
                </a>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Formulario de Contacto -->
      <div class="bg-white rounded-lg p-8 shadow-lg">
        <h3 class="text-2xl font-semibold mb-6">Send us a Message</h3>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-accent focus:border-accent"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-accent focus:border-accent"
              required
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-accent focus:border-accent"
              required
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-accent text-white py-3 px-6 rounded-md hover:bg-accent/90 transition-colors duration-300"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>